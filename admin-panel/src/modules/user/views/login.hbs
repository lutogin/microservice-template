<style>
  .error {
    color: red
  }

  .success {
    color: green;
  }
</style>
<div class="login-box">
  <div class="login-logo">
    <a href=""><b>Admin</b>LTE</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <form action="" class="{{#if message}}has-error{{/if}}" method="post" onsubmit="encodePassword()">
      <div class="form-group has-feedback">
        <input type="user" class="form-control" name="email" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" id="password" placeholder="Password">
        <input type="hidden" id="hashed-password" name="password">

        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      {{#if message}}
      <label class="help-block text-center">{{message}}</label>
      {{/if}}
      <div class="row">
        <div class="col-xs-8">
          {{!-- TODO: --}}
          {{!-- <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
          </div> --}}
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    <a href="#">I forgot my password</a><br>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->